@{
    ViewData["Title"] = "Search Staff";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5 p-4 shadow rounded" style="max-width: 600px; background-color:#f8f9fa;">
    <h2 class="text-center text-primary mb-4">Search Staff by No</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form asp-action="Search" method="post" class="text-center">
        <div class="mb-3">
            <input type="number" name="staffId" class="form-control" placeholder="Enter Staff Id" required />
        </div>
        <button type="submit" class="btn btn-primary px-4">Search</button>
    </form>
</div>
