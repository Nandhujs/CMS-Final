@model IEnumerable<ClinicManagementSystem_Final.Models.Staff>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5 p-4 shadow rounded bg-light">
    <h2 class="text-primary mb-4">Search Results</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">No staff found for this mobile number.</div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Staff No</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile Number</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StaffId</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@item.Role?.RoleName</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Status))
                            {
                                <span class="badge @(item.Status.ToLower() == "active" ? "badge-success" : "badge-secondary")">@item.Status</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.StaffId" class="btn btn-sm btn-info">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.StaffId" class="btn btn-sm btn-secondary ms-1">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="text-center">
        <a asp-action="Index" class="btn btn-secondary mt-3">Back to Staff List</a>
        <a asp-action="SearchByMobile" class="btn btn-primary mt-3 ms-2">Search Again</a>
    </div>
</div>
