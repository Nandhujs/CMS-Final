@{
    ViewData["Title"] = "Pharmacist Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header text-white" style="background: linear-gradient(135deg, var(--teal-primary) 0%, var(--teal-dark) 100%);">
                    <h3 class="card-title mb-0">üíä Pharmacist Dashboard</h3>
                </div>
