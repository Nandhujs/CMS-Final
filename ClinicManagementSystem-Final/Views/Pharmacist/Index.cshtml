                                    <h5 class="card-title">üíä Medicine Inventory</h5>
                                    <p class="card-text">Manage medicines</p>
                                    <a href="@Url.Action("Medicines")" class="btn btn-light">View Medicines</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
