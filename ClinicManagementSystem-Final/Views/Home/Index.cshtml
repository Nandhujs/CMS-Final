@{
    ViewData["Title"] = "Welcome";
}

<div class="container mt-4">
    <!-- Welcome Header -->
    <div class="page-header text-center">
        <h1 class="page-title">🏥 Welcome to Clinic Management System</h1>
        <p class="page-subtitle">Professional Healthcare Management Platform</p>
    </div>

    <!-- Feature Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header text-center">
                    <h5 class="mb-0">👥 Staff Management</h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-users" style="font-size: 3rem; color: var(--teal-primary);"></i>
                    </div>
                    <p class="card-text">Manage clinic staff members, roles, and permissions efficiently.</p>
                    <a href="/Staff" class="btn btn-primary">Manage Staff</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header text-center">
                    <h5 class="mb-0">👨‍⚕️ Doctor Portal</h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-md" style="font-size: 3rem; color: var(--teal-primary);"></i>
                    </div>
                    <p class="card-text">Access patient records, prescriptions, and medical information.</p>
                    <a href="/Doctor" class="btn btn-primary">Doctor Portal</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header text-center">
                    <h5 class="mb-0">🧪 Lab Management</h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-flask" style="font-size: 3rem; color: var(--teal-primary);"></i>
                    </div>
                    <p class="card-text">Manage laboratory tests, results, and technician workflows.</p>
                    <a href="/Lab" class="btn btn-primary">Lab Portal</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Features -->
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h5 class="mb-0">💊 Pharmacy Management</h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-pills" style="font-size: 2.5rem; color: var(--teal-primary);"></i>
                    </div>
                    <p class="card-text">Manage medicines, prescriptions, and inventory.</p>
                    <a href="/Pharmacist" class="btn btn-info">Pharmacy Portal</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h5 class="mb-0">📋 Reception Management</h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-clipboard-list" style="font-size: 2.5rem; color: var(--teal-primary);"></i>
                    </div>
                    <p class="card-text">Handle patient appointments and front desk operations.</p>
                    <a href="/Receptionist" class="btn btn-info">Reception Portal</a>
                </div>
            </div>
        </div>
    </div>

    <!-- System Information -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header text-center">
                    <h5 class="mb-0">ℹ️ System Information</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <h6 class="text-teal">🏥 Clinic Management</h6>
                            <p class="small">Comprehensive healthcare management solution</p>
                        </div>
                        <div class="col-md-3">
                            <h6 class="text-teal">🔒 Secure Access</h6>
                            <p class="small">Role-based authentication and authorization</p>
                        </div>
                        <div class="col-md-3">
                            <h6 class="text-teal">📊 Real-time Data</h6>
                            <p class="small">Live updates and synchronized information</p>
                        </div>
                        <div class="col-md-3">
                            <h6 class="text-teal">📱 Responsive Design</h6>
                            <p class="small">Works on all devices and screen sizes</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
