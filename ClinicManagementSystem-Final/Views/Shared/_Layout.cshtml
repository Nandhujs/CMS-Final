<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClinicManagementSystem_Final</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClinicManagementSystem_Final.styles.css" asp-append-version="true" />
    <style>
        /* Additional header styles for logout button */
        .header-actions {
            display: flex;
            gap: .5rem;
            align-items: center;
        }
        .logout-btn {
            background: transparent;
            border: 1px solid rgba(255,255,255,0.15);
            color: #fff;
            padding: .3rem .6rem;
            border-radius: .375rem;
            transition: all 0.3s ease;
        }
        .logout-btn:hover {
            background: rgba(255,255,255,0.1);
            color: #fff;
            transform: translateY(-1px);
        }
        
        /* Professional hospital styling */
        .navbar-brand::before {
            content: "🏥 ";
            margin-right: 0.5rem;
        }
        
        /* Welcome message styling */
        .welcome-message {
            font-weight: 500;
            color: rgba(255, 255, 255, 0.9);
            margin-right: 1rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm main-header mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Login" asp-action="Index">Clinic Management System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <div class="header-actions">
                        @* Show logout for any logged-in staff (session key "StaffId") *@
                        @if (Context?.Session?.GetInt32("StaffId") != null)
                        {
                            <span class="welcome-message">👋 Hello, @Context.Session.GetString("Username")</span>
                            <form asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn logout-btn">🚪 Logout</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="main-footer mt-auto">
        <div class="container text-center">
            &copy; 2025 - Clinic Management System &mdash; <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
