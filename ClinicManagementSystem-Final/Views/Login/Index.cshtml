@model ClinicManagementSystem_Final.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
    var loggedOut = ViewBag.LoggedOut as bool? ?? false;
}

<style>
    /* Additional login-specific styles */
    .login-subtitle {
        color: var(--text-light);
        font-size: 1rem;
        margin-bottom: 2rem;
        text-align: center;
    }
    
    .login-footer-link {
        color: var(--teal-primary);
        text-decoration: none;
        font-size: .95rem;
        transition: color 0.3s ease;
    }
    
    .login-footer-link:hover {
        color: var(--teal-dark);
        text-decoration: underline;
    }
    
    .form-control::placeholder {
        color: var(--text-light);
        opacity: 0.7;
    }
    
    .login-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        text-align: center;
        color: var(--teal-primary);
    }
</style>

<div class="login-bg">
    <div class="container py-5">
        <div class="row justify-content-center align-items-center min-vh-75">
            <div class="col-md-6 col-lg-5">
                <div class="login-card">
                    <div class="login-icon">🏥</div>
                    <div class="login-title">Clinic Management System</div>
                    <p class="login-subtitle">Professional Healthcare Management Platform</p>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-action="Index" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Username</label>
                            <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="login-btn w-100 mb-2">Login</button>

                        <div class="text-center mt-2">
                            <a href="#" class="login-footer-link">Forgot Password?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            // When we arrive at the login page after logout, replace history and block back
            var loggedOut = '@(loggedOut ? "1" : "0")';
            if (loggedOut === "1") {
                try {
                    // Replace current entry and prevent back navigation to cached pages
                    history.replaceState(null, '', location.href);
                    window.addEventListener('popstate', function () {
                        history.replaceState(null, '', location.href);
                    });
                } catch (e) {
                    // ignore
                }
            }
        })();
    </script>
}
