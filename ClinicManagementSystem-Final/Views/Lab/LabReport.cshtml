@model ClinicManagementSystem_Final.Models.LabReportViewModel
@{
    ViewData["Title"] = "Lab Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Laboratory Report</h3>
                </div>
                <div class="card-body">
                    @if (Model.Patient != null)
                    {
                        <div class="patient-info mb-4 p-3 bg-light rounded">
                            <h5>Patient Information</h5>
                            <p><strong>Name:</strong> @Model.Patient.Name</p>
                            <p><strong>MMR:</strong> @Model.Patient.MMRNo</p>
                            <p><strong>Gender:</strong> @Model.Patient.Gender | <strong>Age:</strong> @Model.Patient.Age | <strong>Blood Group:</strong> @Model.Patient.BloodGroup</p>
                        </div>
                    }

                    <h5 class="mb-3">Test Results</h5>
                    @if (Model.TestResults != null && Model.TestResults.Any())
                    {
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Test Name</th>
                                    <th>Normal Range</th>
                                    <th>Actual Value</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var result in Model.TestResults)
                                {
                                    <tr>
                                        <td>@result.TestName</td>
                                        <td>@result.NormalRange</td>
                                        <td>@result.ActualValue</td>
                                        <td>
                                            <span class="badge" style="background-color: @result.StatusColor">@result.ValueStatus</span>
                                        </td>
                                        <td>@result.Date.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info">No results available.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



