@model List<ClinicManagementSystem_Final.Models.LabResultViewModel>
@{
    ViewData["Title"] = "Pending Lab Tests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">Pending Lab Tests</h3>
                    <a href="@Url.Action("SearchPatient")" class="btn btn-light btn-sm">Search Patient</a>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Patient Name</th>
                                    <th>MMR</th>
                                    <th>Test Name</th>
                                    <th>Sample Type</th>
                                    <th>Normal Range</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var test in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@test.PatientName</strong><br />
                                            <small class="text-muted">@test.Gender, @test.Age yrs</small>
                                        </td>
                                        <td>@test.MMRNo</td>
                                        <td>@test.TestName</td>
                                        <td>@test.SampleType</td>
                                        <td>@test.NormalRange</td>
                                        <td>@test.Date.ToShortDateString()</td>
                                        <td>
                                            <a href="@Url.Action("EditTestResult", new { testId = test.TestId, patientId = test.PatientId })" 
                                               class="btn btn-sm btn-primary">Enter Results</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <h5>No Pending Tests</h5>
                            <p>There are currently no pending lab tests. All tests have been completed.</p>
                            <a href="@Url.Action("SearchPatient")" class="btn btn-primary">Search for Patient</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
