@model ClinicManagementSystem_Final.Models.LabResultViewModel
@{
    ViewData["Title"] = "Lab Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow-lg">
                <div class="card-header text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title mb-0">Laboratory Test Report</h3>
                        <button onclick="window.print()" class="btn btn-light btn-sm">
                            <i class="bi bi-printer"></i> Print
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4 border-bottom pb-3">
                        <h4 class="mb-1">Clinic Management System</h4>
                        <p class="text-muted mb-0">Laboratory Department</p>
                        <p class="text-muted"><small>Report Generated: @DateTime.Now.ToString("MMM dd, yyyy hh:mm tt")</small></p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="fw-bold text-primary">PATIENT INFORMATION</h6>
                            <table class="table table-sm table-borderless">
                                <tr>
                                    <td><strong>Name:</strong></td>
                                    <td>@Model.PatientName</td>
                                </tr>
                                <tr>
                                    <td><strong>MMR No:</strong></td>
                                    <td>@Model.MMRNo</td>
                                </tr>
                                <tr>
                                    <td><strong>Gender:</strong></td>
                                    <td>@Model.Gender</td>
                                </tr>
                                <tr>
                                    <td><strong>Age:</strong></td>
                                    <td>@Model.Age years</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6 class="fw-bold text-primary">TEST DETAILS</h6>
                            <table class="table table-sm table-borderless">
                                <tr>
                                    <td><strong>Test Name:</strong></td>
                                    <td>@Model.TestName</td>
                                </tr>
                                <tr>
                                    <td><strong>Sample Type:</strong></td>
                                    <td>@Model.SampleType</td>
                                </tr>
                                <tr>
                                    <td><strong>Normal Range:</strong></td>
                                    <td>@Model.NormalRange</td>
                                </tr>
                                <tr>
                                    <td><strong>Test Date:</strong></td>
                                    <td>@Model.Date.ToShortDateString()</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-md-4">
                                    <label class="text-muted small">Expected Range</label>
                                    <h5>@Model.NormalRange</h5>
                                </div>
                                <div class="col-md-4 border-start border-end">
                                    <label class="text-muted small">Actual Value</label>
                                    <h5 class="@(Model.StatusColor == "green" ? "text-success fw-bold" : (Model.StatusColor == "red" ? "text-danger fw-bold" : "text-secondary"))">
                                        @Model.ActualValue
                                    </h5>
                                </div>
                                <div class="col-md-4">
                                    <label class="text-muted small">Status</label>
                                    <h5>
                                        <span class="badge" style="background-color: @Model.StatusColor; color: white; padding: 8px 16px; font-size: 14px;">
                                            @Model.ValueStatus
                                        </span>
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Remarks))
                    {
                        <div class="mb-3">
                            <h6 class="fw-bold">Remarks:</h6>
                            <p class="bg-light p-3 rounded">@Model.Remarks</p>
                        </div>
                    }

                    <div class="mt-4 pt-3 border-top text-center">
                        <small class="text-muted">
                            This report is electronically generated and does not require a signature.
                        </small>
                    </div>

                    <div class="mt-3 text-center">
                        <a href="@Url.Action("ContinueToNext", "Lab")" class="btn btn-primary">Continue to Next Test</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @@media print {
        body * {
            visibility: hidden;
        }
        .card, .card * {
            visibility: visible;
        }
        .card {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }
        .btn {
            display: none !important;
        }
    }
</style>



