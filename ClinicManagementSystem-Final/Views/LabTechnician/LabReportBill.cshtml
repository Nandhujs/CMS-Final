@model ClinicManagementSystem_Final.Models.LabResultViewModel
@{
    ViewData["Title"] = "Lab Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // Calculate conclusion based on actual value and normal range
    string conclusion = "";
    string conclusionColor = "";
    string riskLevel = "";
    
    if (Model.ActualValue.HasValue && !string.IsNullOrEmpty(Model.NormalRange))
    {
        // Parse normal range (assuming format like "150-200" or "10.5-15.2")
        var rangeParts = Model.NormalRange.Split('-');
        if (rangeParts.Length == 2 && 
            decimal.TryParse(rangeParts[0].Trim(), out decimal lowRange) && 
            decimal.TryParse(rangeParts[1].Trim(), out decimal highRange))
        {
            decimal actualValue = Model.ActualValue.Value;
            
            if (actualValue < lowRange)
            {
                conclusion = "LOW - Below Normal Range";
                conclusionColor = "danger";
                riskLevel = "HIGH RISK";
            }
            else if (actualValue > highRange)
            {
                conclusion = "HIGH - Above Normal Range";
                conclusionColor = "danger";
                riskLevel = "HIGH RISK";
            }
            else
            {
                conclusion = "NORMAL - Within Normal Range";
                conclusionColor = "success";
                riskLevel = "NO RISK";
            }
        }
        else
        {
            conclusion = "VALUE RECORDED";
            conclusionColor = "info";
            riskLevel = "REVIEW REQUIRED";
        }
    }
    else
    {
        conclusion = "VALUE RECORDED";
        conclusionColor = "info";
        riskLevel = "REVIEW REQUIRED";
    }
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow-lg">
                <div class="card-header text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title mb-0">Laboratory Test Report</h3>
                        <button onclick="window.print()" class="btn btn-light btn-sm">
                            <i class="bi bi-printer"></i> Print
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4 border-bottom pb-3">
                        <h4 class="mb-1">Clinic Management System</h4>
                        <p class="text-muted mb-0">Laboratory Department</p>
                        <p class="text-muted"><small>Report Generated: @DateTime.Now.ToString("MMM dd, yyyy hh:mm tt")</small></p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="fw-bold text-primary">PATIENT INFORMATION</h6>
                            <table class="table table-sm table-borderless">
                                <tr>
                                    <td><strong>Name:</strong></td>
                                    <td>@Model.PatientName</td>
                                </tr>
                                <tr>
                                    <td><strong>MMR No:</strong></td>
                                    <td>@Model.MMRNo</td>
                                </tr>
                                <tr>
                                    <td><strong>Gender:</strong></td>
                                    <td>@Model.Gender</td>
                                </tr>
                                <tr>
                                    <td><strong>Age:</strong></td>
                                    <td>@Model.Age years</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6 class="fw-bold text-primary">TEST DETAILS</h6>
                            <table class="table table-sm table-borderless">
                                <tr>
                                    <td><strong>Test Name:</strong></td>
                                    <td>@Model.TestName</td>
                                </tr>
                                <tr>
                                    <td><strong>Sample Type:</strong></td>
                                    <td>@Model.SampleType</td>
                                </tr>
                                <tr>
                                    <td><strong>Normal Range:</strong></td>
                                    <td>@Model.NormalRange</td>
                                </tr>
                                <tr>
                                    <td><strong>Test Date:</strong></td>
                                    <td>@Model.Date.ToShortDateString()</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <!-- Test Results Section -->
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h6 class="fw-bold text-primary mb-3">TEST RESULTS</h6>
                            <div class="row text-center">
                                <div class="col-md-3">
                                    <label class="text-muted small">Expected Range</label>
                                    <h5 class="text-dark">@Model.NormalRange</h5>
                                </div>
                                <div class="col-md-3 border-start">
                                    <label class="text-muted small">Actual Value</label>
                                    <h5 class="@(conclusionColor == "success" ? "text-success fw-bold" : (conclusionColor == "danger" ? "text-danger fw-bold" : "text-info"))">
                                        @Model.ActualValue
                                    </h5>
                                </div>
                                <div class="col-md-3 border-start">
                                    <label class="text-muted small">Conclusion</label>
                                    <h5>
                                        <span class="badge bg-@conclusionColor text-white px-3 py-2">
                                            @conclusion
                                        </span>
                                    </h5>
                                </div>
                                <div class="col-md-3 border-start">
                                    <label class="text-muted small">Risk Level</label>
                                    <h5>
                                        <span class="badge @(conclusionColor == "danger" ? "bg-danger" : (conclusionColor == "success" ? "bg-success" : "bg-info")) text-white px-3 py-2">
                                            @riskLevel
                                        </span>
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Clinical Interpretation -->
                    <div class="card mb-4">
                        <div class="card-header bg-@conclusionColor text-white">
                            <h6 class="mb-0"><i class="fas fa-stethoscope"></i> CLINICAL INTERPRETATION</h6>
                        </div>
                        <div class="card-body">
                            @if (conclusionColor == "danger")
                            {
                                <div class="alert alert-danger">
                                    <h6 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> ABNORMAL RESULT</h6>
                                    <p class="mb-0">
                                        The test result is <strong>@conclusion.ToLower()</strong>. 
                                        This may indicate a potential health concern and requires immediate medical attention. 
                                        Please consult with a healthcare provider for further evaluation and appropriate treatment.
                                    </p>
                                </div>
                            }
                            else if (conclusionColor == "success")
                            {
                                <div class="alert alert-success">
                                    <h6 class="alert-heading"><i class="fas fa-check-circle"></i> NORMAL RESULT</h6>
                                    <p class="mb-0">
                                        The test result is <strong>within normal range</strong>. 
                                        No immediate medical intervention is required. 
                                        Continue with regular health monitoring as recommended by your healthcare provider.
                                    </p>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <h6 class="alert-heading"><i class="fas fa-info-circle"></i> RESULT RECORDED</h6>
                                    <p class="mb-0">
                                        The test value has been recorded. 
                                        Please consult with a healthcare provider for proper interpretation and clinical correlation.
                                    </p>
                                </div>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Remarks))
                    {
                        <div class="mb-3">
                            <h6 class="fw-bold">Remarks:</h6>
                            <p class="bg-light p-3 rounded">@Model.Remarks</p>
                        </div>
                    }

                    <div class="mt-4 pt-3 border-top text-center">
                        <small class="text-muted">
                            This report is electronically generated and does not require a signature.
                        </small>
                    </div>

                    <div class="mt-3 text-center">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-danger btn-lg" onclick="printReport()">
                                <i class="fas fa-print"></i> Print Report
                            </button>
                            <button type="button" class="btn btn-primary btn-lg" onclick="downloadPDF()">
                                <i class="fas fa-download"></i> Download PDF
                            </button>
                            <a href="@Url.Action("ContinueToNext", "LabTechnician")" class="btn btn-success btn-lg">
                                <i class="fas fa-arrow-right"></i> Continue to Next Test
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @@media print {
        body * {
            visibility: hidden;
        }
        .card, .card * {
            visibility: visible;
        }
        .card {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }
        .btn {
            display: none !important;
        }
    }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
<script>
    function printReport() {
        window.print();
    }
    
    function downloadPDF() {
        const element = document.querySelector('.card');
        const opt = {
            margin: 1,
            filename: 'Lab_Report_' + '@Model.PatientName' + '_' + '@Model.TestName' + '.pdf',
            image: { type: 'jpeg', quality: 0.98 },
            html2canvas: { scale: 2 },
            jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' }
        };
        
        html2pdf().set(opt).from(element).save();
    }
</script>

